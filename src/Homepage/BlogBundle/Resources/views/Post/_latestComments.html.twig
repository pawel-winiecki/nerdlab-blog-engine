<div class="panel panel-default">
    <div class="panel-heading">
            <h4 class="panel-title">Ostatnie komentarze</h4>
    </div>
    <div class="panel-body">
        <ul class="latest-comments">
{% for comment in comments %}
            <li><a href="{{ url('homepage_blog_post',{'link' : comment.getPost().getLink()}) }}#comment-{{ comment.getId() }}">{{ comment.getContent()|striptags|slice(0,35) }}{% if comment.getContent()|length > 36 %}...{% endif %}</a></li>
{% endfor %}
        </ul>
    </div>
</div>

