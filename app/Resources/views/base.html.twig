<!DOCTYPE html>
<html lang="pl">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />

        <title>{% block title %}Blog{% endblock %} - NerdLab.pl</title>
        <meta name="description" content="{% block description %}{% endblock %}" />

        <!-- Bootstrap core CSS -->
        <link rel="stylesheet" type="text/css" href="{{ asset('css/bootstrap.css') }}">

        <!-- My own changes in bootstrap CSS -->
        <link rel="stylesheet" type="text/css" href="{{ asset('css/style.css') }}">
        {% block stylesheets %}{% endblock %}

        <meta name="robots" content="{% block robots %}index, follow{% endblock %}"/>

        <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
        <!--[if lt IE 9]>
          <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
          <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
        <![endif]-->
    </head>
    <body>
        <div id="wrap">
            <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
                <div class="container">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <a class="navbar-brand" href="{{ path('homepage_blog_index') }}"><span class="nerd-logo"></span> NerdLab.pl</a>
                    </div>
                    <div class="collapse navbar-collapse">
                        <ul class="nav navbar-nav">
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">Kategorie <b class="caret"></b></a>
                                <ul class="dropdown-menu">
                            {{ render(controller('HomepageBlogBundle:Blog:categoryList')) }}
                                </ul></li>
                            <li><a href="{{ path('homepage_blog_contact') }}">Kontakt</a></li>
                        </ul>
                        <ul class="nav navbar-nav navbar-right">
                            {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown"><span class="glyphicon glyphicon-user"></span> {{ app.user.getNameToShow() }} <b class="caret"></b></a>
                                <ul class="dropdown-menu">
                                    <li><a href="{{ path('homepage_blog_user_view',{'login' : app.user.username}) }}">Twój profil</a></li>
                                    <li><a href="{{ path('homepage_blog_user_edit',{'login' : app.user.username}) }}">Edytuj</a></li>
                                {% if is_granted('ROLE_AUTHOR') %}
                                    <li><a href="{{ path('homepage_blog_post_create') }}">Napisz post</a></li>
                                    <li><a href="{{ path('homepage_blog_upload_image') }}">Dodaj obrazek</a></li>
                                {% endif %}
                                    <li class="divider"></li>
                                    <li><a href="{{ path('logout') }}">Wyloguj się</a></li>
                                </ul>
                            </li>
                                {% else %}
                            <li>
                                <a href="{{ path('homepage_blog_user_create') }}" rel="nofollow">
                                    Zarejestruj się
                                </a>
                            </li>
                            <li>
                                <a href="{{ path('login') }}" rel="nofollow">
                                    Zaloguj się
                                </a>
                            </li>
                            {% endif %}
                        </ul>
                    </div><!--/.nav-collapse -->
                </div>
            </nav>

            <div class="container">
                {% block container %}
                <div class="row">
                    <div id="main-wrap" class="col-lg-9 col-md-9 ">
                    {% block main %}{% endblock %}
                    </div>
                    <aside id="sidebar" class="col-lg-3 col-md-3">
                        <a class="rss" href="{{ url('homepage_blog_rss') }}">Bądź na bieżąco!</a>
                   {{ render(controller('HomepageBlogBundle:Post:latestPosts', {'max': 3})) }}
                   {{ render(controller('HomepageBlogBundle:Post:latestComments', {'max': 3})) }}
                    </aside>
                </div><!--/row-->
                {% endblock %}
            </div><!--/.container-->
        </div>
        <footer id="footer">
            <div class="container">
                <p>&copy;2013 Paweł Winiecki | <a href="{{ path('homepage_blog_cookies') }}" rel="nofollow">Polityka cookies.</a></p>
            </div>
        </footer>
        <!-- Bootstrap core JavaScript
        ================================================== -->
        <script src="https://code.jquery.com/jquery.js"></script>
        <!-- Placed at the end of the document so the pages load faster -->
        <script src="{{ asset('js/lib/bootstrap/bootstrap.min.js') }}"></script>
        
        <script src="{{ asset('js/cookies.js') }}"></script>
        {% block javascripts %}{% endblock %}
    </body>
</html>
